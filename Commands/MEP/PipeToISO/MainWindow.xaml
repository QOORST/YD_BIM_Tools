<Window x:Class="YD_RevitTools.LicenseManager.Commands.MEP.PipeToISO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="管線轉 ISO 圖工具"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- 樣式定義 -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 標題 -->
        <TextBlock Grid.Row="0" 
                   Text="Revit 管線轉 ISO 圖與 PCF 輸出" 
                   Style="{StaticResource HeaderTextStyle}"
                   FontSize="20"
                   Margin="0,0,0,20"/>

        <!-- 主要內容區 -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 管線系統選擇 -->
            <GroupBox Grid.Row="0" Header="選擇管線系統" Margin="0,0,0,15" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="管線系統：" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <ComboBox Grid.Row="0" Grid.Column="1" 
                              x:Name="SystemComboBox"
                              Height="30"
                              Margin="0,0,10,0"
                              DisplayMemberPath="Name"
                              SelectionChanged="SystemComboBox_SelectionChanged"/>
                    
                    <Button Grid.Row="0" Grid.Column="2" 
                            Content="重新整理"
                            Width="100"
                            Height="30"
                            Click="RefreshButton_Click"
                            Style="{StaticResource SecondaryButton}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                               x:Name="SystemInfoText"
                               Text="尚未選擇管線系統"
                               Margin="0,10,0,0"
                               Foreground="#666666"
                               FontSize="12"/>
                </Grid>
            </GroupBox>

            <!-- 輸出選項 -->
            <GroupBox Grid.Row="1" Header="輸出選項" Padding="10">
                <StackPanel>
                    <CheckBox x:Name="GenerateISOViewCheckBox" 
                              Content="生成 ISO 等角視圖"
                              IsChecked="True"
                              Margin="0,5"/>
                    
                    <CheckBox x:Name="ExportPCFCheckBox" 
                              Content="匯出 PCF 格式檔案"
                              IsChecked="True"
                              Margin="0,5"/>
                    
                    <CheckBox x:Name="ExportBOMCheckBox" 
                              Content="匯出材料清單 (CSV)"
                              IsChecked="True"
                              Margin="0,5"/>
                    
                    <CheckBox x:Name="ExportImageCheckBox" 
                              Content="匯出視圖圖片 (PNG)"
                              IsChecked="False"
                              Margin="0,5"/>
                    
                    <CheckBox x:Name="GenerateScheduleCheckBox" 
                              Content="建立 Revit 明細表 (BOM 表格)"
                              IsChecked="True"
                              Margin="0,5"
                              ToolTip="在 Revit 中自動建立包含管線和配件的材料明細表"/>

                    <Separator Margin="0,15,0,15"/>

                    <TextBlock Text="輸出路徑：" FontWeight="Bold" Margin="0,0,0,5"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" 
                                 x:Name="OutputPathTextBox"
                                 Height="30"
                                 VerticalContentAlignment="Center"
                                 Margin="0,0,10,0"
                                 IsReadOnly="True"/>
                        
                        <Button Grid.Column="1" 
                                Content="瀏覽..."
                                Width="80"
                                Height="30"
                                Click="BrowseButton_Click"
                                Style="{StaticResource SecondaryButton}"/>
                    </Grid>

                    <TextBlock Text="ISO 編號：" FontWeight="Bold" Margin="0,15,0,5"/>
                    <TextBox x:Name="ISONumberTextBox"
                             Height="30"
                             VerticalContentAlignment="Center"/>
                </StackPanel>
            </GroupBox>

            <!-- 進度顯示 -->
            <StackPanel Grid.Row="2" Margin="0,15,0,0" x:Name="ProgressPanel" Visibility="Collapsed">
                <TextBlock x:Name="ProgressText" 
                           Text="處理中..." 
                           Margin="0,0,0,5"
                           FontWeight="Bold"/>
                <ProgressBar x:Name="ProgressBar" 
                             Height="20"
                             Minimum="0"
                             Maximum="100"
                             Value="0"/>
            </StackPanel>
        </Grid>

        <!-- 按鈕區 -->
        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" 
                    Content="開始生成"
                    Width="120"
                    Height="40"
                    x:Name="GenerateButton"
                    Click="GenerateButton_Click"
                    Style="{StaticResource PrimaryButton}"/>
            
            <Button Grid.Column="2" 
                    Content="取消"
                    Width="120"
                    Height="40"
                    Click="CancelButton_Click"
                    Style="{StaticResource SecondaryButton}"/>
        </Grid>
    </Grid>
</Window>
