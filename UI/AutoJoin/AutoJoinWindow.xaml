<Window x:Class="YD_RevitTools.LicenseManager.UI.AutoJoin.AutoJoinWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="YD_BIM - 自動結構接合設定"
        Height="550" Width="650"
        MinHeight="480" MinWidth="540"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 內建規則 -->
        <GroupBox Grid.Row="0" Header="內建規則" Margin="0,0,0,8">
            <StackPanel Margin="10,8">
                <CheckBox x:Name="cbWF" Content="牆–樓板（樓板切）" IsChecked="True" Margin="0,0,0,4"/>
                <CheckBox x:Name="cbWB" Content="牆–梁（梁切）" IsChecked="True" Margin="0,0,0,4"/>
                <CheckBox x:Name="cbFC" Content="樓板–柱（柱切）" IsChecked="True"/>
            </StackPanel>
        </GroupBox>

        <!-- 自訂配對（A 切 B） -->
        <GroupBox Grid.Row="1" Header="自訂配對（A 切 B）" Margin="0,0,0,8">
            <StackPanel Margin="10,8">
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <ComboBox x:Name="cbCatA" Grid.Column="0" Margin="0,0,8,0" Height="24"/>
                    <ComboBox x:Name="cbCatB" Grid.Column="1" Margin="0,0,8,0" Height="24"/>
                    <Button   x:Name="btnAddPair" Grid.Column="2" Content="加入" Width="68" Height="24" Click="btnAddPair_Click"/>
                </Grid>

                <ListBox x:Name="lbPairs" Height="100" Margin="0,0,0,8"/>

                <Button x:Name="btnRemovePair" Content="移除選取"
                HorizontalAlignment="Right" Width="96"
                Click="btnRemovePair_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- 模式 / 範圍 / 搜尋 -->
        <GroupBox Grid.Row="2" Header="模式 / 範圍 / 搜尋" Margin="0,0,0,8">
            <Grid Margin="10,8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <CheckBox x:Name="cbDry" Grid.Row="0" Grid.Column="0"
                  Content="Dry-Run（不動模型）" Margin="0,0,12,4"/>
                <CheckBox x:Name="cbSwitchOnly" Grid.Row="0" Grid.Column="1"
                  Content="只切換順序（不做 Join）" Margin="0,0,0,4"/>

                <CheckBox x:Name="cbOnlyView" Grid.Row="1" Grid.Column="0"
                  Content="只處理目前視圖" Margin="0,0,12,0"/>
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                    <CheckBox x:Name="cbOnlySel" Content="只處理目前選取" Margin="0,0,8,0"/>
                    <TextBlock Text="外框膨脹（ft）：" VerticalAlignment="Center" Margin="12,0,6,0"/>
                    <TextBox x:Name="tbInflate" Width="64" Height="22" Text="1.0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 記錄 -->
        <GroupBox Grid.Row="3" Header="記錄" Margin="0,0,0,8">
            <Grid Margin="10,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <CheckBox x:Name="cbLog" Content="輸出 CSV" Grid.Column="0" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBox x:Name="tbCsv" Grid.Column="1" Text="C:\Temp\AutoJoinLog.csv" Height="22"/>
            </Grid>
        </GroupBox>

        <!-- 占位（讓內容可延展） -->
        <Border Grid.Row="4" Height="0"/>

        <!-- 動作按鈕 -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="開始" Width="100" Margin="0,8,8,0" Click="btnOK_Click"/>
            <Button Content="取消" Width="80" Margin="0,8,0,0" Click="btnCancel_Click"/>
        </StackPanel>

    </Grid>
</Window>
